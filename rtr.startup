#!/bin/bash

# Router
ip addr add 10.0.0.1/24 dev eth0    # mqtt
ip addr add 10.0.1.1/24 dev eth1    # p1
ip addr add 10.0.2.1/24 dev eth2    # p2
ip addr add 10.0.3.1/24 dev eth3    # p3
ip addr add 10.0.4.1/24 dev eth4    # cc
ip addr add 10.0.5.1/24 dev eth5    # en
ip link set eth0 up
ip link set eth1 up
ip link set eth2 up
ip link set eth3 up
ip link set eth4 up
ip link set eth5 up